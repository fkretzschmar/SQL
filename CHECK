#Limites utilizando o CHECK

CREATE TABLE TAB_CHECK
(ID INT NOT NULL,
NOME VARCHAR(50) NULL,
IDADE INT NULL,
CIDADE VARCHAR(50) NULL,
CONSTRAINT CHK_IDADE CHECK (IDADE >= 18));

CREATE TABLE TAB_CHECK2
(ID INT NOT NULL,
NOME VARCHAR(50) NULL,
IDADE INT NULL,
CIDADE VARCHAR(50) NULL,
CONSTRAINT CHK_IDADE2 CHECK((IDADE >= 18 AND CIDADE = 'Rio de Janeiro') OR
						  (IDADE >= 16 AND CIDADE = 'SÃ£o Paulo')));
